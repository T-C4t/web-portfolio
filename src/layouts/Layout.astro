---
import Navigation from '../components/Navigation.astro';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'My portfolio website' } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    
    <!-- Inline script to prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const storedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (storedTheme === 'dark' || (!storedTheme && prefersDark)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
  </head>
  <body>
    <Navigation />
    <main>
      <slot />
    </main>

    <script>
      // Theme toggle functionality
      const themeToggle = document.getElementById('theme-toggle');
      
      if (themeToggle) {
        themeToggle.addEventListener('click', () => {
          const html = document.documentElement;
          
          if (html.classList.contains('dark')) {
            html.classList.remove('dark');
            localStorage.setItem('theme', 'light');
          } else {
            html.classList.add('dark');
            localStorage.setItem('theme', 'dark');
          }
        });
      }

      // Navigation scroll background
      const mainNav = document.querySelector('.main-nav');
      
      function handleScroll() {
        if (!mainNav) return;
        
        if (window.scrollY > 50) {
          mainNav.classList.add('scrolled');
        } else {
          mainNav.classList.remove('scrolled');
        }
      }

      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });

      // Initial check
      handleScroll();
    </script>
  </body>
</html>

<style is:global>
  :root {
    --bg-color: #ffffff;
    --text-color: #333333;
    --border-color: #e0e0e0;
    --hover-bg: rgba(0, 0, 0, 0.05);
    
    /* Theme transition - smooth color changes */
    --transition-duration: 0.4s;
    --transition-ease: cubic-bezier(0.4, 0, 0.2, 1);
  }

  html.dark {
    --bg-color: #1a1a1a;
    --text-color: #f0f0f0;
    --border-color: #333333;
    --hover-bg: rgba(255, 255, 255, 0.1);
  }

  /* Smooth theme transitions */
  *, *::before, *::after {
    transition: background-color var(--transition-duration) var(--transition-ease),
                color var(--transition-duration) var(--transition-ease),
                border-color var(--transition-duration) var(--transition-ease),
                opacity var(--transition-duration) var(--transition-ease),
                box-shadow var(--transition-duration) var(--transition-ease);
  }

  /* Exclude animations from theme transitions */
  .bg-gradient, .bg-noise, .hero-name, .name-first, .name-last {
    transition: none;
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: var(--bg-color);
    color: var(--text-color);
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 2rem;
  }
</style>
