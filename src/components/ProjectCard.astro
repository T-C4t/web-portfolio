---
import type { Project, ProjectCategory } from '../data/projects';

interface Props {
  project: Project;
  lang: 'en' | 'cs';
}

const { project, lang } = Astro.props;
---

<article class="project-card" data-category={project.category}>
  <div class="project-image">
    <span class="project-category">{project.category}</span>
  </div>
  
  <div class="project-content">
    <h3 class="project-title">{project.title[lang]}</h3>
    <p class="project-description">{project.description[lang]}</p>
    
    <div class="project-tags">
      {project.tags.slice(0, 4).map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
    
    <div class="project-links">
      {project.liveUrl && (
        <a href={project.liveUrl} class="project-link" target="_blank" rel="noopener noreferrer">
          {lang === 'en' ? 'View' : 'Zobrazit'}
        </a>
      )}
      {project.repoUrl && (
        <a href={project.repoUrl} class="project-link" target="_blank" rel="noopener noreferrer">
          {lang === 'en' ? 'Code' : 'KÃ³d'}
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  html.dark .project-card:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .project-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: var(--text-color);
    opacity: 0.05;
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    padding: 1rem;
  }

  .project-category {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-color);
    opacity: 0.4;
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-title {
    font-size: 1.125rem;
    font-weight: 500;
    margin: 0 0 0.75rem 0;
    color: var(--text-color);
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--text-color);
    opacity: 0.65;
    margin: 0 0 1rem 0;
    line-height: 1.6;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }

  .tag {
    font-size: 0.6875rem;
    padding: 0.25rem 0.5rem;
    background: var(--hover-bg);
    border-radius: 3px;
    color: var(--text-color);
    opacity: 0.7;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-link {
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-color);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .project-link:hover {
    opacity: 1;
  }
</style>
