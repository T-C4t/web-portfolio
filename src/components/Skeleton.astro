---
interface Props {
  width?: string;
  height?: string;
  borderRadius?: string;
}

const { 
  width = '100%', 
  height = '1rem', 
  borderRadius = '4px' 
} = Astro.props;
---

<div 
  class="skeleton" 
  style={`width: ${width}; height: ${height}; border-radius: ${borderRadius};`}
></div>

<style>
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .skeleton {
    background: linear-gradient(
      90deg,
      var(--border-color) 25%,
      var(--hover-bg) 50%,
      var(--border-color) 75%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }
</style>
