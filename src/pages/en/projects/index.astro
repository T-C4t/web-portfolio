---
import Layout from '../../../layouts/Layout.astro';
import ProjectCard from '../../../components/ProjectCard.astro';
import { projects, categories } from '../../../data/projects';

const lang = 'en';
---

<Layout title="Projects - Richard MateÄka">
  <section class="projects-page">
    <header class="projects-header">
      <p class="page-label">Selected Work</p>
      <h1 class="page-title">Projects</h1>
      <div class="page-divider"></div>
      <p class="page-description">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
        Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
    </header>

    <div class="filter-section">
      <button class="filter-btn active" data-filter="all">
        All
      </button>
      {categories.map((category) => (
        <button class="filter-btn" data-filter={category.id}>
          {category.label.en}
        </button>
      ))}
    </div>

    <div class="projects-grid" id="projects-grid">
      {projects.map((project) => (
        <ProjectCard project={project} lang={lang} />
      ))}
    </div>

    <p class="no-results" id="no-results" style="display: none;">
      No projects found in this category.
    </p>
  </section>
</Layout>

<script>
  function initFilter() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const projects = document.querySelectorAll('.project-card');
    const noResults = document.getElementById('no-results');

    filterBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        filterBtns.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');

        const filter = btn.getAttribute('data-filter');
        let visibleCount = 0;

        projects.forEach((project) => {
          const category = project.getAttribute('data-category');
          
          if (filter === 'all' || category === filter) {
            (project as HTMLElement).style.display = 'block';
            visibleCount++;
          } else {
            (project as HTMLElement).style.display = 'none';
          }
        });

        if (noResults) {
          noResults.style.display = visibleCount === 0 ? 'block' : 'none';
        }
      });
    });
  }

  initFilter();
  document.addEventListener('astro:page-load', initFilter);
</script>

<style>
  .projects-page {
    padding: 4rem 2rem;
  }

  .projects-header {
    text-align: center;
    margin-bottom: 4rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .page-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--text-color);
    opacity: 0.5;
    margin: 0 0 1rem 0;
  }

  .page-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 300;
    margin: 0 0 1.5rem 0;
    color: var(--text-color);
    letter-spacing: -0.02em;
  }

  .page-divider {
    width: 40px;
    height: 1px;
    background: var(--text-color);
    opacity: 0.3;
    margin: 0 auto 1.5rem auto;
  }

  .page-description {
    font-size: 1rem;
    color: var(--text-color);
    opacity: 0.7;
    line-height: 1.7;
    margin: 0;
  }

  .filter-section {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .filter-btn {
    padding: 0.625rem 1.25rem;
    font-size: 0.8rem;
    font-weight: 500;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--text-color);
    cursor: pointer;
    transition: all 0.25s ease;
    letter-spacing: 0.01em;
  }

  .filter-btn:hover {
    border-color: var(--text-color);
  }

  .filter-btn.active {
    background: var(--text-color);
    border-color: var(--text-color);
    color: var(--bg-color);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .no-results {
    text-align: center;
    font-size: 1rem;
    color: var(--text-color);
    opacity: 0.5;
    padding: 4rem 0;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
