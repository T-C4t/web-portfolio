---
import Layout from '../../layouts/Layout.astro';
import { useTranslatedPath } from '../../i18n/utils';

const lang = 'cs';
const translatePath = useTranslatedPath(lang);
---

<Layout title="Richard Matečka">
  <section class="hero">
    <div class="hero-content">
      <p class="hero-label">Portfolio</p>
      <h1 class="hero-name">Richard<br/>Matečka</h1>
      <div class="hero-divider"></div>
      <p class="hero-tagline">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. 
        Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
      </p>
      <div class="hero-cta">
        <a href={translatePath('/projects')} class="btn btn-primary">
          Projekty
        </a>
        <a href={translatePath('/contact')} class="btn btn-secondary">
          Kontakt
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    background: 
      radial-gradient(ellipse at 20% 80%, rgba(79, 70, 229, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 20%, rgba(99, 102, 241, 0.06) 0%, transparent 50%),
      var(--bg-color);
  }

  .hero-content {
    max-width: 900px;
    text-align: left;
  }

  .hero-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--text-color);
    opacity: 0.5;
    margin: 0 0 1.5rem 0;
  }

  .hero-name {
    font-size: clamp(3.5rem, 12vw, 8rem);
    font-weight: 300;
    line-height: 0.95;
    margin: 0 0 2rem 0;
    color: var(--text-color);
    letter-spacing: -0.02em;
  }

  .hero-divider {
    width: 60px;
    height: 2px;
    background: var(--text-color);
    opacity: 0.3;
    margin: 0 0 2rem 0;
  }

  .hero-tagline {
    font-size: 1.125rem;
    color: var(--text-color);
    opacity: 0.7;
    margin: 0 0 3rem 0;
    line-height: 1.7;
    max-width: 500px;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--text-color);
    color: var(--bg-color);
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-color);
    border: 1px solid var(--border-color);
  }

  .btn-secondary:hover {
    border-color: var(--text-color);
  }

  @media (max-width: 768px) {
    .hero-content {
      text-align: center;
    }

    .hero-divider {
      margin: 0 auto 2rem auto;
    }

    .hero-cta {
      justify-content: center;
    }
  }
</style>
