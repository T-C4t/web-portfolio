---
import Layout from '../../../layouts/Layout.astro';
import { useTranslatedPath } from '../../../i18n/utils';

const lang = 'cs';
const translatePath = useTranslatedPath(lang);

const githubUrl = 'https://github.com/T-C4t';
const linkedinUrl = 'https://linkedin.com/in/yourusername';
const emailUrl = 'mailto:richard@example.com';
---

<Layout title="Kontakt - Richard Matečka">
  <section class="contact-page">
    <header class="contact-header">
      <p class="page-label">Kontakt</p>
      <h1 class="page-title">Kontakt</h1>
      <div class="page-divider"></div>
      <p class="page-description">
        Neváhejte se ozvat ohledně spolupráce, projektů nebo jen tak na pokec.
      </p>
    </header>

    <div class="contact-container">
      <!-- Social Links -->
      <div class="social-section">
        <h2 class="section-title">Odkazy</h2>
        
        <div class="social-links">
          <a href={githubUrl} class="social-link" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
            <span>GitHub</span>
          </a>
          
          <a href={linkedinUrl} class="social-link" target="_blank" rel="noopener noreferrer">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
            <span>LinkedIn</span>
          </a>
          
          <a href={emailUrl} class="social-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>Email</span>
          </a>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="form-section">
        <h2 class="section-title">Zpráva</h2>
        <form class="contact-form" action={emailUrl} method="post" enctype="text/plain">
          <div class="form-group">
            <label for="name">Jméno</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              placeholder="Vaše jméno"
            />
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              placeholder="vas@email.com"
            />
          </div>
          
          <div class="form-group">
            <label for="message">Zpráva</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required 
              placeholder="Vaše zpráva..."
            ></textarea>
          </div>
          
          <button type="submit" class="submit-btn">
            Odeslat
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-page {
    padding: 4rem 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--text-color);
    opacity: 0.5;
    margin: 0 0 1rem 0;
  }

  .page-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 300;
    margin: 0 0 1.5rem 0;
    color: var(--text-color);
    letter-spacing: -0.02em;
  }

  .page-divider {
    width: 40px;
    height: 1px;
    background: var(--text-color);
    opacity: 0.3;
    margin: 0 auto 1.5rem auto;
  }

  .page-description {
    font-size: 1rem;
    color: var(--text-color);
    opacity: 0.7;
    line-height: 1.7;
    margin: 0;
    max-width: 500px;
    margin: 0 auto;
  }

  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
  }

  .section-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: var(--text-color);
    opacity: 0.6;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    text-decoration: none;
    color: var(--text-color);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    transition: all 0.25s ease;
  }

  .social-link:hover {
    border-color: var(--text-color);
  }

  .social-link span {
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-color);
  }

  .form-group input,
  .form-group textarea {
    padding: 0.875rem;
    font-size: 0.9375rem;
    font-family: inherit;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background: var(--bg-color);
    color: var(--text-color);
    transition: border-color 0.2s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--text-color);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-btn {
    padding: 1rem 1.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    background: var(--text-color);
    color: var(--bg-color);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.25s ease;
    align-self: flex-start;
  }

  .submit-btn:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .contact-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
