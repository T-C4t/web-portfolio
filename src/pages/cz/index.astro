---
import Layout from '../../layouts/Layout.astro';
import { ui } from '../../i18n/ui';
import { useTranslatedPath } from '../../i18n/utils';

const lang = 'cz';
const t = ui[lang];
const translatePath = useTranslatedPath(lang);
---

<Layout title="John Doe - Vývojář software">
  <section class="hero">
    <div class="hero-content">
      <h1 class="hero-name">John Doe</h1>
      <p class="hero-title">Vývojář software</p>
      <p class="hero-tagline">
        Vytvářím elegantní řešení složitých problémů. 
        Zaujatý čistým kódem a uživatelskou zkušeností.
      </p>
      <div class="hero-cta">
        <a href={translatePath('/projects')} class="btn btn-primary">
          Moje projekty
        </a>
        <a href={translatePath('/contact')} class="btn btn-secondary">
          Kontaktovat
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-name {
    font-size: 4rem;
    font-weight: 800;
    margin: 0 0 0.5rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-title {
    font-size: 1.5rem;
    color: var(--text-color);
    opacity: 0.8;
    margin: 0 0 1.5rem 0;
  }

  .hero-tagline {
    font-size: 1.25rem;
    color: var(--text-color);
    opacity: 0.7;
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-color);
    border: 2px solid var(--border-color);
  }

  .btn-secondary:hover {
    border-color: #667eea;
    color: #667eea;
  }

  @media (max-width: 768px) {
    .hero-name {
      font-size: 2.5rem;
    }

    .hero-title {
      font-size: 1.25rem;
    }

    .hero-tagline {
      font-size: 1rem;
    }
  }
</style>
